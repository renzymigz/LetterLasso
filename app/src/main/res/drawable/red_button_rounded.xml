<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#800020"
                android:endColor="#EE4B2B"
                android:type="linear" />
            <corners android:radius="25dp" /> <!-- Rounded corners -->

            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- White border -->
        </shape>
    </item>
</selector>
