<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/retry_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.RetryLevelFragment"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"


    android:background="@drawable/loser">

    <TextView
        android:layout_marginTop="400dp"
        android:id="@+id/retry_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vhs_gothic"
        android:text="YOU DIED!"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/retry_perfect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ooooops..."
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return"
            android:fontFamily="@font/vhs_gothic"
            android:padding="12dp"
            android:textSize="18sp"
            android:backgroundTint="#D52E53"
            android:textColor="#fffce8"/>
    <Button
        android:id="@+id/retry_level_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retry Level"
        android:fontFamily="@font/vhs_gothic"
        android:padding="12dp"
        android:textSize="18sp"
        android:backgroundTint="#D52E53"
        android:textColor="#fffce8"/>

    </LinearLayout>
</LinearLayout>
